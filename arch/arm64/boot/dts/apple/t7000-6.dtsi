#include "t7000.dtsi"

/ {
	chosen {
		framebuffer: framebuffer@83e900000 {
			compatible = "simple-framebuffer";
			reg = <0x8 0x3e900000 0x0 (1334 * 750 * 4)>;
			width = <750>;
			height = <1334>;
			stride = <(750 * 4)>;
			format = "a8b8g8r8";
		};
	};

	reserved-memory {
		framebuffer_mem: memory@83e900000 {
			reg = <0x8 0x3e900000 0x0 (1334 * 750 * 4)>;
			no-map;
		};
	};
};
